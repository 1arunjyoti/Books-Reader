# Server Configuration
# Copy this file to .env and fill in your actual values

# Server Port
PORT=3001

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier

# Auth0 Management API (Required for account deletion)
# Create a Machine to Machine application in Auth0 Dashboard
# Grant it delete:users permission for Auth0 Management API
AUTH0_CLIENT_ID=your-management-client-id
AUTH0_CLIENT_SECRET=your-management-client-secret

# BlackBlaze B2 Configuration
B2_ENDPOINT=your-endpoint.backblazeb2.com
B2_KEY_ID=your-key-id
B2_APPLICATION_KEY=your-application-key
B2_BUCKET_NAME=your-bucket-name

# PostgreSQL Database (Neon)
# Get this from your Neon dashboard: https://console.neon.tech
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Node Environment
NODE_ENV=development
