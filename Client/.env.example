# Client Configuration
# Copy this file to .env.local and .env.production and fill in your actual values

# Clerk Configuration
# Get these from your Clerk Dashboard: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key
CLERK_SECRET_KEY=sk_test_your-secret-key

# Clerk Sign-in/Sign-up URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/library
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/library

# Your application base URL (use HTTPS in production)
# Change to your deployed frontend URL when needed
APP_BASE_URL=http://localhost:3000

# Backend API URL (Express server) - use HTTPS in production
# Change to your deployed backend URL when needed
NEXT_PUBLIC_API_URL=http://localhost:3001

# Comma-separated list of image hosts allowed for Next.js Image component
NEXT_PUBLIC_IMAGE_DOMAINS=s3.asia-east-003.backblazeb2.com,your-cdn-domain.com
