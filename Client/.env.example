# Generate with: openssl rand -hex 32
AUTH0_SECRET=your-32-byte-secret-here

# Your application base URL (use HTTPS in production)
APP_BASE_URL=https://yourdomain.com

# Auth0 Application Settings
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# Auth0 API Audience (must match the API identifier in Auth0 Dashboard)
# This should be the same value as AUTH0_AUDIENCE in Server/.env
AUTH0_AUDIENCE=https://your-api-identifier

# Backend API URL (Express server) - use HTTPS in production
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Comma-separated list of image hosts allowed for Next.js Image component
NEXT_PUBLIC_IMAGE_DOMAINS=s3.eu-central-003.backblazeb2.com,your-cdn-domain.com
